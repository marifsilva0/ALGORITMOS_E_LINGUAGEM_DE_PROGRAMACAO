/* OBJETIVO: Desenhe um algoritmo que receba dois números e mostre a soma, a subtração, a multiplicação e a divisão dos números. */
{
    int n1, n2, soma, sub, divisao, multi;
    Console.WriteLine("Digite o primeiro número: ");
    n1 = int.Parse(Console.ReadLine());
    Console.WriteLine("Digite o segundo número: ");
    n2 = int.Parse(Console.ReadLine());
    soma = n1 + n2;
    Console.Write("A soma é: ");
    Console.WriteLine(soma);
    sub = n1 - n2;
    Console.Write("A subtração é: ");
    Console.WriteLine(sub);
    multi = n1 * n2;
    Console.Write("A multiplicação é: ");
    Console.WriteLine(multi);
    divisao = n1 / n2;
    Console.Write("A divisão é: ");
    Console.WriteLine(divisao);
}
